@model EmployeeViewModel
@{
    ViewData["Title"] = "Edit Employee";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Employees</a></li>
        <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>
</nav>

<h1 class="h3 mb-4"><i class="bi bi-pencil me-2"></i>Edit Employee</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Department" class="form-label"></label>
                    <input asp-for="Department" class="form-control" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="TargetSales" class="form-label"></label>
                    <input asp-for="TargetSales" class="form-control" type="number" step="0.01" min="0.01" />
                    <span asp-validation-for="TargetSales" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="ActualSales" class="form-label"></label>
                    <input asp-for="ActualSales" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="ActualSales" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="AttendanceDays" class="form-label"></label>
                    <input asp-for="AttendanceDays" class="form-control" type="number" min="0" />
                    <span asp-validation-for="AttendanceDays" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="TotalWorkingDays" class="form-label"></label>
                    <input asp-for="TotalWorkingDays" class="form-control" type="number" min="1" />
                    <span asp-validation-for="TotalWorkingDays" class="text-danger"></span>
                </div>
            </div>
            <p class="small text-muted mt-2 mb-0">KPI (Sales 70% + Attendance 30%) is recalculated on save.</p>
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
